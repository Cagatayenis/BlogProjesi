@model MVCBLOG_PROJE.Models.Entity.Uye
@{
    ViewBag.Title = "UyeOL";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div class="container">
    <div class="panel-body">

        @using (Html.BeginForm("UyeOl", "Kullanici", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.Ad)
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Soyad)
                @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.KullaniciAdi)
                @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Sifre)
                @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
            <input type="submit" value="Uye OL" />
        }

    </div>
</div>
