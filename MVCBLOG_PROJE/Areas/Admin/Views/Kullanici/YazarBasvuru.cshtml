@model MVCBLOG_PROJE.Models.Entity.Uye
@{
    ViewBag.Title = "YazarBasvuru";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<h2>Yazar Basvuru Sayasi</h2>
<span>@ViewBag.Hata</span>
<div class="container">
    <div class="panel-body">
        @using (Html.BeginForm("YazarBasvuru", "Kullanici", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.KullaniciAdi)
                @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Sifre)
                @Html.TextBoxFor(x => x.Sifre,new { @class = "form-control" })
            </div>
            <div class="form-group">
             <input type="checkbox" name="Yazar"/> <span class="form-control" style="line-grid">Uyeliginize Yazar olarak Devam etmek İstermisiniz?(Lütfen Kutucugu işaretleyin.)</span>
            </div>
            
            <input type="submit" value="Yazar Ol" />
        }
    </div>
</div>