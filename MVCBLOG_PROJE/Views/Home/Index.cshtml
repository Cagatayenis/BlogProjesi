<div class="container inner">
    <h3 class="section-title">Diğer Makaleler</h3>
    <div class="latest-blog-wrapper">

       
        <div class="latest-blog isotope isotope js-isotope row" data-isotope-options='{ "layoutMode": "fitRows", "itemSelector": ".post" }'>

            @foreach (var item in Model)
            {
                <div class="post col-sm-12 col-md-6">

                    <div class="row">

                        <div class="col-sm-4">
                            <figure>
                                <a href="/Home/MakaleDetay/@item.ID">
                                    <div class="text-overlay">
                                        <div class="info"><span>Daha Fazla</span></div>
                                    </div>
                                    <img src="~/Contet/style/images/art/b1.jpg" alt="" />
                                </a>
                            </figure>
                        </div>
                        <div class="col-sm-8 post-content">
                            <div class="meta"><span class="date">
                                @if(@item.EklenmeTarihi!=null)
                                {
                                    @item.EklenmeTarihi.Value.ToShortDateString().ToString()
                                }
                                 </span><span class="comments"><a href="#">8 <i class="icon-chat-1"></i></a></span></div>
                            <h3 class="post-title"><a href="/Home/MakaleDetay/@item.ID">@item.Baslik</a></h3>
                            <p>
                            @if(item.Icerik.Length>250)
                            {
                                <p>@item.Icerik.Substring(0,210)</p>
                            }
                            </p>
                            

                        </div>

                    </div>
                    <!--/.row -->
                </div>

                <!--/.post -->
            }
            </div>
        
            <!--/.latest-blog -->
        </div>
    <!--/.latest-blog-wrapper -->

</div>


<div class="dark-wrapper">
    <div class="container inner text-center">
        <p class="lead">Would you like to work with us?</p>
        <a href="contact.html" class="btn"><i class="icon-paper-plane"></i> Contact Us</a>
    </div>
</div>
