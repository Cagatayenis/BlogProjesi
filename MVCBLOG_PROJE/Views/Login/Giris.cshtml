@model MVCBLOG_PROJE.Models.Entity.Uye

@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div class="justify-content-center"><h2>Giris Formu</h2></div>
<div class="container">
    <div class="panel panel-body">
        @using (Html.BeginForm("Giris", "Login", FormMethod.Post))
        {
            <div class="row">
                <div class="form-group">
                    <div class="col-4">@Html.LabelFor(x => x.KullaniciAdi)</div>
                    <div class="col-8">
                        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Sifre)
                    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
                </div>
                <input type="submit" value="Giris Yap" />
            </div>


        }

    </div>
</div>